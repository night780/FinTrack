<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BudgetManagementActivity"
    android:background="#9E9AA6">

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Monthly Budget"
        android:textSize="24sp"
        android:textColor="#202020"/>

    <EditText
        android:id="@+id/budgetEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter budget amount (e.g., 300)"
        android:textSize="18sp"
        android:layout_below="@id/instructionTextView"
        android:layout_marginTop="8dp"
        android:textColor="#202020"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/budgetEditText"
        android:layout_marginTop="16dp"
        android:textColor="#202020"/>

    <!-- Add a back button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside" />




</RelativeLayout>
